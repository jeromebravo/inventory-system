<%- include("../partials/header") %>

<div class="container my-4">
    <div class="row">
        <div class="col-8 col-md-6 col-lg-4 m-auto p-4 box">
            <h5 class="card-title text-center">ADD STOCKS</h5>
            <hr>
            <form action="/items/<%= item._id %>/stocks?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="stocks">Stocks <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="stocks" name="stocks" min="1" required>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>